{
	"name": "payroll-backend",
	"version": "1.0.0",
	"type": "commonjs",
	"license": "MIT",
	"scripts": {
		"dev": "yarn docker:dev:restart && cross-env NODE_ENV=development tsx watch src/server/index.ts",
		"build": "yarn clean && yarn lint && yarn check && yarn format:check && yarn prisma:generate && esbuild server/index.ts --platform=node --target=node20 --bundle --minify --format=esm --outdir=dist",
		"start": "cross-env NODE_ENV=production node --enable-source-maps dist/index.js",
		"check": "tsc --noEmit",
		"lint": "eslint . --ext .ts --report-unused-disable-directives --max-warnings 0",
		"lint:fix": "eslint . --ext .ts --fix",
		"format": "prettier --write \"**/*.{ts,js,json,md,yaml,yml}\"",
		"format:check": "prettier --check \"**/*.{ts,js,json,md,yaml,yml}\"",
		"test": "cross-env NODE_ENV=test jest --detectOpenHandles --forceExit",
		"test:ci": "yarn test --coverage --ci",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r tsx/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json",
		"docker:prod:up": "docker-compose -f docker-compose.prod.yml up -d --build",
		"docker:prod:down": "docker-compose -f docker-compose.prod.yml down",
		"docker:dev:up": "docker-compose up -d",
		"docker:dev:down": "docker-compose down",
		"docker:dev:restart": "docker-compose down && docker-compose up -d && sleep 2 && yarn prisma:migrate:dev",
		"docker:logs": "docker-compose logs -f",
		"prisma:generate": "prisma generate",
		"prisma:migrate:dev": "prisma migrate dev",
		"prisma:migrate:deploy": "prisma migrate deploy",
		"prisma:studio": "prisma studio",
		"prisma:reset": "prisma migrate reset --force",
		"seed": "tsx prisma/seed.ts",
		"clean": "rimraf dist coverage .cache",
		"health-check": "curl -f http://localhost:3000/health || exit 1",
		"prestart": "yarn build"
	},
	"dependencies": {
		"@langchain/community": "^0.3.41",
		"@langchain/core": "^0.3.44",
		"@langchain/openai": "^0.5.5",
		"@prisma/client": "^5.10.0",
		"@types/bcryptjs": "^2.4.6",
		"amqplib": "^0.10.7",
		"bcrypt": "^5.1.1",
		"compression": "^1.8.0",
		"cors": "^2.8.5",
		"date-fns": "^3.6.0",
		"eslint-import-resolver-typescript": "^4.3.2",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-security": "^3.0.1",
		"express": "^4.21.2",
		"express-async-errors": "^3.1.1",
		"express-rate-limit": "^7.1.5",
		"handlebars": "^4.7.8",
		"helmet": "^8.1.0",
		"hpp": "^0.2.3",
		"html-to-text": "^9.0.5",
		"http-errors": "^2.0.0",
		"http-status-codes": "^2.3.0",
		"jsonwebtoken": "^9.0.2",
		"nodemailer": "^6.10.0",
		"openai": "^4.95.1",
		"pino": "^9.6.0",
		"pino-http": "^10.4.0",
		"pino-pretty": "^13.0.0",
		"redis": "^4.7.0",
		"together-ai": "^0.15.1",
		"vaul": "^1.1.0",
		"zod": "^3.23.8",
		"zod-validation-error": "^3.4.0"
	},
	"devDependencies": {
		"@types/bcrypt": "^5.0.2",
		"@types/compression": "^1.7.5",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/handlebars": "^4.1.0",
		"@types/html-to-text": "^9.0.4",
		"@types/jest": "^29.5.14",
		"@types/jsonwebtoken": "^9.0.9",
		"@types/node": "^20.16.11",
		"@types/nodemailer": "^6.4.17",
		"@types/supertest": "^6.0.2",
		"@typescript-eslint/eslint-plugin": "^8.29.0",
		"@typescript-eslint/parser": "^8.29.0",
		"cross-env": "^7.0.3",
		"dotenv": "^16.4.7",
		"esbuild": "^0.25.0",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-import": "^2.31.0",
		"eslint-plugin-jest": "^27.9.0",
		"eslint-plugin-prettier": "^5.1.3",
		"eslint-plugin-promise": "^6.1.1",
		"husky": "^8.0.3",
		"jest": "^29.7.0",
		"jest-mock-extended": "^3.0.5",
		"lint-staged": "^15.2.2",
		"prettier": "^3.2.5",
		"prisma": "^5.10.0",
		"rimraf": "^5.0.5",
		"supertest": "^6.3.4",
		"ts-jest": "^29.1.2",
		"tsconfig-paths": "^4.2.0",
		"tsx": "^4.19.3",
		"typescript": "^5.6.3"
	},
	"optionalDependencies": {},
	"lint-staged": {
		"*.{js,ts}": [
			"eslint --fix",
			"prettier --write"
		],
		"*.{json,md}": [
			"prettier --write"
		]
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node",
		"coveragePathIgnorePatterns": [
			"/node_modules/",
			"/dist/",
			"/test/",
			"/prisma/"
		],
		"testMatch": [
			"**/?(*.)+(spec|test).ts"
		],
		"transform": {
			"^.+\\.ts$": "ts-jest"
		}
	},
	"prisma": {
		"schema": "prisma/schema.prisma"
	}
}
